{% extends 'BSUIRIndividualPlanBundle::base.html.twig' %}
{% block title %}Изменить Участие в Работе Советов, Комиссий ...{% endblock %}
{% block h1 %}Изменить Участие в Работе Советов, Комиссий ...{% endblock %}
{% block main_content %}
    <div class="row">
        <div class="col-lg-6">
            {% if otherItems %}
                <p><a href="{{ url('other_work_print', {ow_id: otherWork.id}) }}" class="btn btn-default btn-lg btn-block" target="_blank">Распечатать План</a></p>
            {% endif %}
        </div>
        <div class="col-lg-6">
            <p><a href="{{ url('other_items_create', {ow_id: otherWork.id}) }}" class="btn btn-primary btn-lg btn-block">Создать запись</a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Созданные Записи</h3>
                </div>
                <div class="panel-body">
                    {% if otherItems %}
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Выполняемая Работа</th>
                                <th>Отметка о Выполнении</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in otherItems %}
                                <tr>
                                    <td>{{ item.id }}</td>
                                    <td>{{ item.work }}</td>
                                    <td>{{ item.mark }}</td>
                                    <td>
                                        <a href="{{ url('other_items_update', {oi_id: item.id}) }}" class="btn btn-warning">Обновить</a>
                                        <a href="{{ url('other_items_remove', {oi_id: item.id}) }}" class="btn btn-danger">Удалить</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        У Вас нету записей
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
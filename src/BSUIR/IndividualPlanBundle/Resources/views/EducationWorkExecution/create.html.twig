{% extends 'BSUIRIndividualPlanBundle::base.html.twig' %}
{% block title %}Создать Учебную Работу(Выполнение){% endblock %}
{% block h1 %}Создать Учебную Работу(Выполнение){% endblock %}
{% block main_content %}
    <div class="row">
        <div class="col-lg-6">
            {{ form_start(form, {'attr' : { 'class' : 'form-horizontal' }}) }}
            <fieldset>
                <div class="form-group">
                    {{ form_label(form.semester, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.semester, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.semester) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-lg-offset-3">
                        {{ form_widget(form.create, { 'attr' : { 'class' : 'btn btn-primary' }, 'label': 'Создать' }) }}
                    </div>
                </div>
            </fieldset>
            {{ form_widget(form._token) }}
            {{ form(form) }}
        </div>
        <div class="col-lg-6">

        </div>
    </div>
{% endblock %}
{% extends '::base.html.twig' %}
{% block stylesheets %}
    {% stylesheets '@BSUIRIndividualPlanBundle/Resources/public/bootstrap/themes/darkly/*.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {% stylesheets '@BSUIRIndividualPlanBundle/Resources/public/bootstrap/themes/darkly/*.less' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
    <header>
        <div class="container">
            {% include 'BSUIRIndividualPlanBundle::header.html.twig' %}
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-header">
                    <h1>{% block h1 %}BSUIR{% endblock %}</h1>
                </div>
            </div>
        </div>
        <div class="content-wrapper">
            {% block main_content %}{% endblock %}
        </div>
    </div>
{% endblock body %}
{% block javascripts %}
    {% javascripts
    '@BSUIRIndividualPlanBundle/Resources/public/js/*'
    '@BSUIRIndividualPlanBundle/Resources/public/bootstrap/*.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% extends 'BSUIRIndividualPlanBundle::base.html.twig' %}
{% block title %}Индивидуальные Планы{% endblock %}
{% block h1 %}Индивидуальные Планы{% endblock %}
{% block main_content %}
    <div class="row">
        <div class="col-lg-8">
            {% if (plans) %}
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Созданные планы</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-hover ">
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Год</th>
                            <th>Дата Создания</th>
                            <th>Дата Редактирования</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set i = 1 %}
                        {% for plan in plans %}
                            <tr>
                                <td>{{ i }}</td>
                                <td>{{ plan.session }} - {{ plan.session + 1 }}</td>
                                <td>{{ plan.createdAt|date('d.m.Y') }}</td>
                                <td>{{ plan.updatedAt|date('d.m.Y') }}</td>
                                <td>
                                    <a href="{{ url('individual_plan_update', {'ip_id': plan.id}) }}" class="btn btn-warning">Изменить</a>
                                    <a href="{{ url('individual_plan_remove', {'ip_id': plan.id}) }}" class="btn btn-danger">Удалить</a>
                                </td>
                                {% set i = i + 1 %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {% endif %}
        </div>
        <div class="col-lg-4">
            <a href="{{ url('individual_plan_create') }}" class="btn btn-primary btn-lg btn-block">Создать Индивидуальный План</a>
        </div>
    </div>
{% endblock %}
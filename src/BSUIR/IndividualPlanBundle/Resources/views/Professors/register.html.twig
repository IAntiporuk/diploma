{% extends 'BSUIRIndividualPlanBundle::base.html.twig' %}
{% block title %}Регистрация{% endblock %}
{% block h1 %}Регистрация{% endblock %}
{% block main_content %}
    <div class="row">
        <div class="col-lg-6">
            {{ form_start(form, {'attr' : { 'class' : 'form-horizontal' }}) }}
            <fieldset>
                {% for field in form.professors %}
                    {% if field.vars.name == 'competitionSelected' %}
                        {% set fieldClass = 'date-form-control' %}
                    {% else %}
                        {% set fieldClass = 'form-control' %}
                    {% endif %}
                    <div class="form-group">
                        {{ form_label(field, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                        <div class="col-lg-9">
                            {{ form_widget(field, { 'attr' : { 'class' : fieldClass } }) }}
                            <span class="error">{{ form_errors(field) }}</span>
                        </div>
                    </div>
                {% endfor %}
                <div class="form-group">
                    {{ form_label(form.password.password, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.password.password, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.password.password) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.password.confirm, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.password.confirm, {'attr': {'class': 'form-control'}})}}
                        <span class="error">{{ form_errors(form.password.confirm) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-lg-offset-3">
                        {{ form_widget(form.sign_up, {'attr': {'class': 'btn btn-primary'}, 'label': 'Зарегистрироваться'})}}
                    </div>
                </div>
            </fieldset>
            {{ form_widget(form._token) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
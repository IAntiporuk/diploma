{% extends 'BSUIRIndividualPlanBundle::base.html.twig' %}
{% block title %}Sign Up{% endblock %}
{% block h1 %}Sign Up{% endblock %}
{% block main_content %}
    <div class="row">
        <div class="col-lg-6">
            {{ form_start(form, {'attr' : { 'class' : 'form-horizontal' }}) }}
            <fieldset>
                <div class="form-group">
                    {{ form_label(form.firstName, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.firstName, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.firstName) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.secondName, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.secondName, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.secondName) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lastName, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.lastName, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.lastName) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.department, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.department, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.department) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.email) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.academicTitle, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.academicTitle, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.academicTitle) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.scholasticDegree, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.scholasticDegree, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.scholasticDegree) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.competitionSelected, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.competitionSelected, { 'attr' : { 'class' : 'date-form-control' } }) }}
                        <span class="error">{{ form_errors(form.competitionSelected) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.password.password, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.password.password, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.password.password) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.password.confirm, null, {'label_attr' : {'class' : 'col-lg-3 control-label' } }) }}
                    <div class="col-lg-9">
                        {{ form_widget(form.password.confirm, { 'attr' : { 'class' : 'form-control' } }) }}
                        <span class="error">{{ form_errors(form.password.confirm) }}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-12 col-lg-offset-3">
                        {{ form_widget(form.sign_up, { 'attr' : { 'class' : 'btn btn-primary' } }) }}
                    </div>
                </div>
            </fieldset>
            {{ form_widget(form._token) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
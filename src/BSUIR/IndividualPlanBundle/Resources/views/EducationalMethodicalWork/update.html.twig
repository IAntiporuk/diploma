{% extends 'BSUIRIndividualPlanBundle::base.html.twig' %}
{% block title %}Изменить Учебно-методическую и Организационно-методическую Работу{% endblock %}
{% block h1 %}Изменить Учебно-методическую и Организационно-методическую Работу{% endblock %}
{% block main_content %}
    <div class="row">
        <div class="col-lg-6">
            {% if emi %}
                <p><a href="{{ url('educational_methodical_work_print', {emw_id: emw.id}) }}" class="btn btn-default btn-lg btn-block" target="_blank">Распечатать План</a></p>
            {% endif %}
        </div>
        <div class="col-lg-6">
            <p><a href="{{ url('educational_methodical_items_create', {emw_id: emw.id}) }}" class="btn btn-primary btn-lg btn-block">Создать запись</a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">Созданные Записи</h3>
                </div>
                <div class="panel-body">
                    {% if emi %}
                        <table class="table table-striped table-hover ">
                            <thead>
                            <tr>
                                <th>#</th>
                                <th>Название работ</th>
                                <th>Начало</th>
                                <th>Конец</th>
                                <th>Отметка на 30.12</th>
                                <th>Отметка на 01.07</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in emi %}
                                <tr>
                                    <td>{{ item.id }}</td>
                                    <td>{{ item.workName }}</td>
                                    <td>{{ item.startedAt|date('d.m.Y') }}</td>
                                    <td>{{ item.finishedAt|date('d.m.Y') }}</td>
                                    <td>{{ item.markFirst }}</td>
                                    <td>{{ item.markSecond }}</td>
                                    <td>
                                        <a href="{{ url('educational_methodical_items_update', {emi_id: item.id}) }}" class="btn btn-warning">Обновить</a>
                                        <a href="{{ url('educational_methodical_items_remove', {emi_id: item.id}) }}" class="btn btn-danger">Удалить</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% else %}
                        У Вас нету записей
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}